{
    "$id": "https://my.domain.com/rev00/tree",
    "$schema": "https://json-schema.org/draft/next/schema",
    "$defs": { 
        "_node": {
            "type": "object",
            "properties": {
                "commonProperty": {
                    "type": "string"
                }
            }
        },
        "leafA": {
            "type": "object",
            "allOf": [ { "$ref": "#/$defs/_node" } ],
            "required": [ "type", "leafAProperty" ],
            "properties": {
                "type": { "const": "LeafA" },
                "leafAProperty": {
                    "type": "string"
                }
            }
        },
        "leafB": {
            "type": "object",
            "allOf": [ { "$ref": "#/$defs/_node" } ],
            "required": [ "type" ],
            "properties": {
                "type": { "const": "LeafB" }
            }
        },
        "_container": {
            "type": "object",
            "allOf": [ { "$ref": "#/$defs/_node" } ],
            "properties": {
                "children": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/$defs/node"
                    }    
                }
            }
        },
        "containerA": {
            "type": "object",
            "allOf": [ { "$ref": "#/$defs/_container" } ],
            "required": [ "type" ],
            "properties": {
                "type": { "const": "ContainerA" }
            }
        },
        "containerB": {
            "type": "object",
            "allOf": [ { "$ref": "#/$defs/_container" } ],
            "required": [ "type" ],
            "properties": {
                "type": { "const": "ContainerB" }
            }
        },
        "node": {
            "type": "object",
            "if": {
                "not": { "required": ["$ref"] }
            },
            "else": {
                "required": ["$ref"],
                "properties": {
                    "$ref": {
                        "type": "string",
                        "format": "uri-reference"
                    }
                }
            },
            "then": {
                "properties": { 
                    "type": {
                        "enum": [ "LeafA", "LeafB", "ContainerA", "ContainerB" ]
                    }
                },
                "required": [ "type" ],
                "propertyDependencies": {
                    "type": {
                        "LeafA": { "$ref": "#/$defs/leafA" },
                        "LeafB": { "$ref": "#/$defs/leafB" },
                        "ContainerA": { "$ref": "#/$defs/containerA" },
                        "ContainerB": { "$ref": "#/$defs/containerB" }
                    }
                }
            }
        }
    },
    "type": "object",
    "properties": {
        "root": {
            "$ref": "#/$defs/node"
        }
    }
}
